# Using the hardcoded gitlab URL here, so it's easy to build locally as well (you will need docker login ... though):
FROM gitlab.isaac.nl:443/antwerpen/dependency_proxy/containers/eclipse-temurin:8
FROM eclipse-temurin:8

ENV TZ=Europe/Brussels
ENV LC_ALL en_US.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US.UTF-8

RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
ENTRYPOINT [ "sh", "-c", "java $JAVA_OPTS -Djava.security.egd=file:/dev/./urandom -Dspring.profiles.active=e2e -jar /web/app.jar" ]
